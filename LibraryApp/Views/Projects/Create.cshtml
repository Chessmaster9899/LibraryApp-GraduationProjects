@model LibraryApp.Models.Project

@{
    ViewData["Title"] = "Create Project";
}

<h1>Create</h1>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Abstract" class="control-label"></label>
                <textarea asp-for="Abstract" class="form-control" rows="4" placeholder="Brief description of the project..."></textarea>
                <span asp-validation-for="Abstract" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Keywords" class="control-label"></label>
                <input asp-for="Keywords" class="form-control" placeholder="Machine Learning, Database, Web Development" />
                <span asp-validation-for="Keywords" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<ProjectStatus>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubmissionDate" class="control-label"></label>
                <input asp-for="SubmissionDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="SubmissionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DefenseDate" class="control-label"></label>
                <input asp-for="DefenseDate" class="form-control" type="date" />
                <span asp-validation-for="DefenseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade" class="form-control" placeholder="A, B+, 85/100, etc." />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="documentFile" class="control-label">Document File</label>
                <input type="file" name="documentFile" class="form-control" accept=".pdf,.doc,.docx,.txt" />
                <small class="form-text text-muted">Upload a PDF, Word document, or text file (optional)</small>
            </div>
            <div class="form-group">
                <label for="posterFile" class="control-label">Project Poster</label>
                <input type="file" name="posterFile" class="form-control" accept=".jpg,.jpeg,.png,.pdf,.svg" />
                <small class="form-text text-muted">Upload project poster (JPG, PNG, PDF, or SVG format, optional)</small>
            </div>
            <div class="form-group">
                <label asp-for="StudentId" class="control-label">Student</label>
                <select asp-for="StudentId" class ="form-control" asp-items="ViewBag.StudentId">
                    <option value="">Please select a student</option>
                </select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupervisorId" class="control-label">Supervisor</label>
                <select asp-for="SupervisorId" class ="form-control" asp-items="ViewBag.SupervisorId">
                    <option value="">Please select a supervisor</option>
                </select>
                <span asp-validation-for="SupervisorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}