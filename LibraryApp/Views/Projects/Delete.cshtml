@model Project
@{
    ViewData["Title"] = "Delete Project";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1 text-danger">
                <i class="fas fa-trash-alt me-2"></i>Delete Project
            </h1>
            <p class="text-muted mb-0">Permanently remove this project from the system</p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left me-1"></i>Back to Projects
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Danger Alert -->
            <div class="alert alert-danger border-0 shadow-sm mb-4" role="alert">
                <div class="d-flex align-items-center">
                    <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                    <div>
                        <h5 class="alert-heading mb-1">Are you sure you want to delete this project?</h5>
                        <p class="mb-0">This action cannot be undone. All project data, files, and associated records will be permanently deleted.</p>
                    </div>
                </div>
            </div>

            <!-- Project Details Card -->
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-project-diagram me-2 text-primary"></i>Project Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-12">
                            <div class="mb-3">
                                <label class="form-label text-muted small fw-semibold">PROJECT TITLE</label>
                                <h5 class="mb-0">@Model.Title</h5>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Abstract))
                        {
                            <div class="col-12">
                                <div class="mb-3">
                                    <label class="form-label text-muted small fw-semibold">ABSTRACT</label>
                                    <p class="mb-0">@Model.Abstract</p>
                                </div>
                            </div>
                        }

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted small fw-semibold">STUDENT</label>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-user-graduate text-primary me-2"></i>
                                    <div>
                                        <div>@Model.Student?.FirstName @Model.Student?.LastName</div>
                                        <small class="text-muted">@Model.Student?.StudentNumber</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted small fw-semibold">SUPERVISOR</label>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-chalkboard-teacher text-primary me-2"></i>
                                    <span>@Model.Supervisor?.Title @Model.Supervisor?.FirstName @Model.Supervisor?.LastName</span>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label text-muted small fw-semibold">STATUS</label>
                                <div>
                                    <span class="badge bg-@(Model.Status == ProjectStatus.Completed ? "success" : 
                                                          Model.Status == ProjectStatus.InProgress ? "warning" : 
                                                          Model.Status == ProjectStatus.Approved ? "info" : 
                                                          Model.Status == ProjectStatus.Defended ? "success" :
                                                          Model.Status == ProjectStatus.Published ? "success" : "secondary") fs-6">
                                        @Model.Status
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label text-muted small fw-semibold">SUBMISSION DATE</label>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-calendar text-primary me-2"></i>
                                    <span>@Model.SubmissionDate.ToString("MMM dd, yyyy")</span>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label text-muted small fw-semibold">DEFENSE DATE</label>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-presentation text-warning me-2"></i>
                                    <span>
                                        @if (Model.DefenseDate.HasValue)
                                        {
                                            @Model.DefenseDate.Value.ToString("MMM dd, yyyy")
                                        }
                                        else
                                        {
                                            <em class="text-muted">Not scheduled</em>
                                        }
                                    </span>
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Grade))
                        {
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label text-muted small fw-semibold">GRADE</label>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-star text-warning me-2"></i>
                                        <span class="fw-bold fs-5">@Model.Grade</span>
                                    </div>
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Keywords))
                        {
                            <div class="col-12">
                                <div class="mb-3">
                                    <label class="form-label text-muted small fw-semibold">KEYWORDS</label>
                                    <div>
                                        @foreach (var keyword in Model.Keywords.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                        {
                                            <span class="badge bg-light text-dark me-1">@keyword.Trim()</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="mt-4 d-flex justify-content-between align-items-center">
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-arrow-left me-1"></i>Cancel
                </a>
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger btn-lg" 
                            onclick="return confirm('Are you absolutely sure you want to delete this project? This action cannot be undone.')">
                        <i class="fas fa-trash-alt me-1"></i>Delete Permanently
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>