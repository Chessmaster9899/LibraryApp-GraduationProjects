@model IEnumerable<LibraryApp.Models.Student>
@{
    ViewData["Title"] = "My Students";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">@ViewBag.PageTitle</h1>
            <p class="text-muted mb-0">Students from projects you supervise or evaluate</p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
            </a>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var student in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-start">
                                <div class="icon-shape bg-primary bg-opacity-10 text-primary rounded-circle p-2 me-3">
                                    <i class="fas fa-user-graduate"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h5 class="card-title mb-1">@student.FullName</h5>
                                    <p class="text-muted mb-2">@student.StudentNumber</p>
                                    
                                    <div class="mb-2">
                                        <span class="badge bg-light text-dark">
                                            <i class="fas fa-building me-1"></i>@student.Department?.Name
                                        </span>
                                    </div>
                                    
                                    @if (!string.IsNullOrEmpty(student.Email))
                                    {
                                        <div class="mb-1">
                                            <small class="text-muted">
                                                <i class="fas fa-envelope me-1"></i>
                                                <a href="mailto:@student.Email" class="text-decoration-none">@student.Email</a>
                                            </small>
                                        </div>
                                    }
                                    
                                    @if (!string.IsNullOrEmpty(student.Phone))
                                    {
                                        <div class="mb-1">
                                            <small class="text-muted">
                                                <i class="fas fa-phone me-1"></i>
                                                <a href="tel:@student.Phone" class="text-decoration-none">@student.Phone</a>
                                            </small>
                                        </div>
                                    }
                                </div>
                            </div>
                            
                            <div class="mt-3">
                                <small class="text-muted d-block">
                                    <i class="fas fa-project-diagram me-1"></i>
                                    @student.Projects.Count project(s)
                                </small>
                            </div>
                        </div>
                        
                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100" role="group">
                                <a href="mailto:@student.Email" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-envelope me-1"></i>Email
                                </a>
                                @if (!string.IsNullOrEmpty(student.Phone))
                                {
                                    <a href="tel:@student.Phone" class="btn btn-sm btn-outline-secondary">
                                        <i class="fas fa-phone me-1"></i>Call
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="icon-shape bg-light text-muted rounded-circle p-4 mx-auto mb-3" style="width: 80px; height: 80px;">
                <i class="fas fa-user-graduate fa-2x"></i>
            </div>
            <h4 class="text-muted">No Students Found</h4>
            <p class="text-muted">You don't have any students assigned to your supervised or evaluated projects yet.</p>
            <a asp-action="Index" class="btn btn-primary">
                <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
            </a>
        </div>
    }
</div>