@{
    ViewData["Title"] = "Not Found";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center">
                <div class="not-found-illustration mb-4">
                    <i class="fas fa-search" style="font-size: 6rem; color: var(--info-color); opacity: 0.7;"></i>
                    <h1 class="display-1 fw-bold text-white-shadow mt-3">404</h1>
                    <h2 class="h3 text-white-shadow mb-4">Page Not Found</h2>
                    <p class="lead text-white-shadow mb-4">
                        The page you're looking for doesn't exist or has been moved to a different location.
                    </p>
                </div>

                <div class="card bg-light border-0 shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title text-info">
                            <i class="fas fa-lightbulb me-2"></i>What you can do:
                        </h5>
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Check the URL for typos</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Use the navigation menu to find what you need</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Go back to the previous page</li>
                            <li><i class="fas fa-check text-success me-2"></i>Start from the home page</li>
                        </ul>
                    </div>
                </div>

                <div class="search-suggestion mb-4">
                    <div class="card bg-primary text-white border-0 shadow-sm">
                        <div class="card-body">
                            <h6 class="card-title">
                                <i class="fas fa-search me-2"></i>Looking for projects?
                            </h6>
                            <p class="card-text mb-3">Browse our graduation projects gallery:</p>
                            <a asp-controller="Guest" asp-action="Dashboard" class="btn btn-light">
                                <i class="fas fa-eye me-2"></i>View Project Gallery
                            </a>
                        </div>
                    </div>
                </div>

                <div class="btn-group" role="group">
                    <a href="javascript:history.back()" class="btn btn-outline-primary btn-lg">
                        <i class="fas fa-arrow-left me-2"></i>Go Back
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                        <i class="fas fa-home me-2"></i>Home
                    </a>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        @if (User.IsInRole("Student"))
                        {
                            <a asp-controller="Student" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-user-graduate me-2"></i>My Dashboard
                            </a>
                        }
                        else if (User.IsInRole("Professor"))
                        {
                            <a asp-controller="Professor" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-chalkboard-teacher me-2"></i>My Dashboard
                            </a>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .not-found-illustration i {
            animation: sway 3s ease-in-out infinite;
        }
        
        @@keyframes sway {
            0%, 100% {
                transform: rotate(-5deg);
            }
            50% {
                transform: rotate(5deg);
            }
        }
        
        .search-suggestion {
            animation: fadeInUp 0.8s ease-out;
        }
        
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        @@media (max-width: 768px) {
            .display-1 {
                font-size: 4rem;
            }
            
            .btn-group {
                flex-direction: column;
            }
            
            .btn-group .btn {
                margin-bottom: 0.5rem;
            }
        }
    </style>
}