<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @ViewBag.UniversitySettings.Name @ViewBag.UniversitySettings.ApplicationTitle</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LibraryApp.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="@ViewBag.UniversitySettings.FaviconPath" />
    
    <style>
        :root {
            --primary-color: @ViewBag.UniversitySettings.Colors.Primary;
            --secondary-color: @ViewBag.UniversitySettings.Colors.Secondary;
            --success-color: @ViewBag.UniversitySettings.Colors.Success;
            --info-color: @ViewBag.UniversitySettings.Colors.Info;
            --warning-color: @ViewBag.UniversitySettings.Colors.Warning;
            --danger-color: @ViewBag.UniversitySettings.Colors.Danger;
            --light-color: @ViewBag.UniversitySettings.Colors.Light;
            --dark-color: @ViewBag.UniversitySettings.Colors.Dark;
            --navbar-bg: @ViewBag.UniversitySettings.Colors.NavbarBg;
            --navbar-text: @ViewBag.UniversitySettings.Colors.NavbarText;
        }
        
        .navbar {
            background-color: var(--navbar-bg) !important;
        }
        
        .navbar .navbar-brand,
        .navbar .nav-link {
            color: var(--navbar-text) !important;
        }
        
        .bg-primary { background-color: var(--primary-color) !important; }
        .bg-secondary { background-color: var(--secondary-color) !important; }
        .bg-success { background-color: var(--success-color) !important; }
        .bg-info { background-color: var(--info-color) !important; }
        .bg-warning { background-color: var(--warning-color) !important; }
        .bg-danger { background-color: var(--danger-color) !important; }
        
        .btn-primary { background-color: var(--primary-color); border-color: var(--primary-color); }
        .btn-secondary { background-color: var(--secondary-color); border-color: var(--secondary-color); }
        .btn-success { background-color: var(--success-color); border-color: var(--success-color); }
        .btn-info { background-color: var(--info-color); border-color: var(--info-color); }
        .btn-warning { background-color: var(--warning-color); border-color: var(--warning-color); }
        .btn-danger { background-color: var(--danger-color); border-color: var(--danger-color); }
        
        .navbar-brand-logo {
            height: 40px;
            margin-right: 10px;
        }
        
        /* Mobile optimizations */
        @@media (max-width: 768px) {
            .navbar-brand span {
                font-size: 0.9rem;
            }
            
            .navbar-brand-logo {
                height: 35px;
            }
            
            .table-responsive {
                font-size: 0.85rem;
            }
            
            .btn-group .btn {
                padding: 0.25rem 0.5rem;
                font-size: 0.8rem;
            }
            
            .card-body {
                padding: 1rem;
            }
        }
        
        @@media (max-width: 576px) {
            .navbar-brand-logo {
                height: 30px;
                margin-right: 5px;
            }
            
            .navbar-brand span {
                font-size: 0.8rem;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img id="universityLogo" src="@ViewBag.UniversitySettings.LogoPath" alt="@ViewBag.UniversitySettings.Name Logo" class="navbar-brand-logo" 
                         onerror="this.src='/images/defaults/logo.svg'" />
                    <span>@ViewBag.UniversitySettings.ShortName @ViewBag.UniversitySettings.ApplicationTitle</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Guest" asp-action="Dashboard">
                                <i class="fas fa-eye me-1"></i>Project Gallery
                            </a>
                        </li>
                        @if (!string.IsNullOrEmpty(Context.Session.GetString("UserId")))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Students" asp-action="Index">Students</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Professors" asp-action="Index">Professors</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Projects" asp-action="Index">Projects</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Departments" asp-action="Index">Departments</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    
                    <!-- User Authentication Section -->
                    <ul class="navbar-nav">
                        @if (!string.IsNullOrEmpty(Context.Session.GetString("UserId")))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle me-1"></i>
                                    @{
                                        var userName = Context.Session.GetString("UserName") ?? Context.Session.GetString("UserId");
                                        var userRole = Context.Session.GetString("UserRole");
                                    }
                                    @userName (@userRole)
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    @if (userRole == "Student")
                                    {
                                        <li><a class="dropdown-item" asp-controller="Student" asp-action="Index"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a></li>
                                        <li><a class="dropdown-item" asp-controller="Student" asp-action="Profile"><i class="fas fa-user me-2"></i>Profile</a></li>
                                    }
                                    else if (userRole == "Professor")
                                    {
                                        <li><a class="dropdown-item" asp-controller="Professor" asp-action="Index"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a></li>
                                        <li><a class="dropdown-item" asp-controller="Professor" asp-action="Profile"><i class="fas fa-user me-2"></i>Profile</a></li>
                                    }
                                    else if (userRole == "Admin")
                                    {
                                        <li><a class="dropdown-item" asp-controller="Home" asp-action="Index"><i class="fas fa-tachometer-alt me-2"></i>Admin Panel</a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="ChangePassword"><i class="fas fa-key me-2"></i>Change Password</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" asp-controller="Auth" asp-action="Logout"><i class="fas fa-sign-out-alt me-2"></i>Sign Out</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Login"><i class="fas fa-sign-in-alt me-1"></i>Sign In</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - @ViewBag.UniversitySettings.FooterText - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            @if (!string.IsNullOrEmpty(ViewBag.UniversitySettings.ContactEmail))
            {
                <span class="ms-3">
                    <i class="fas fa-envelope"></i> 
                    <a href="mailto:@ViewBag.UniversitySettings.ContactEmail">@ViewBag.UniversitySettings.ContactEmail</a>
                </span>
            }
            @if (!string.IsNullOrEmpty(ViewBag.UniversitySettings.ContactPhone))
            {
                <span class="ms-3">
                    <i class="fas fa-phone"></i> 
                    <a href="tel:@ViewBag.UniversitySettings.ContactPhone">@ViewBag.UniversitySettings.ContactPhone</a>
                </span>
            }
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
