@{
    ViewData["Title"] = "Change Password";
    var universitySettings = (UniversitySettings)ViewBag.UniversitySettings;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @universitySettings.ApplicationTitle</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="@universitySettings.FaviconPath">
    <style>
        :root {
            --primary-color: #0066cc;
            --secondary-color: #f8f9fa;
            --text-color: #333;
            --bg-color: #ffffff;
        }
        
        body {
            background: linear-gradient(135deg, var(--primary-color) 0%, #0056b3 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .password-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
        }
        
        .password-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            padding: 3rem;
            width: 100%;
            max-width: 450px;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        
        .university-logo {
            max-height: 80px;
            max-width: 200px;
            margin-bottom: 1.5rem;
        }
        
        .password-header {
            text-align: center;
            margin-bottom: 2rem;
        }
        
        .password-header h1 {
            color: var(--primary-color);
            font-weight: 600;
            margin-bottom: 0.5rem;
            font-size: 1.8rem;
        }
        
        .password-header p {
            color: #666;
            margin-bottom: 0;
        }
        
        .form-floating > label {
            color: #666;
        }
        
        .form-control {
            border-radius: 12px;
            border: 2px solid #e9ecef;
            padding: 0.75rem 1rem;
            transition: all 0.3s ease;
        }
        
        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(0, 102, 204, 0.25);
        }
        
        .btn-change {
            background: linear-gradient(135deg, var(--primary-color) 0%, #0056b3 100%);
            border: none;
            border-radius: 12px;
            padding: 0.75rem 2rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            width: 100%;
        }
        
        .btn-change:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 102, 204, 0.3);
        }
        
        .alert {
            border-radius: 12px;
            border: none;
            margin-bottom: 1.5rem;
        }
        
        .password-info {
            background: rgba(255, 193, 7, 0.1);
            border-radius: 12px;
            padding: 1rem;
            margin-top: 1.5rem;
            font-size: 0.875rem;
            color: #666;
        }
        
        .password-info h6 {
            color: #e67e22;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }
    </style>
</head>
<body>
    <div class="password-container">
        <div class="password-card">
            <div class="password-header">
                <img src="@universitySettings.LogoPath" alt="@universitySettings.Name Logo" class="university-logo" />
                <h1>Change Password</h1>
                <p>Please update your password</p>
                <small class="text-muted">User: @ViewBag.UserId</small>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @ViewBag.Error
                </div>
            }

            <form method="post">
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="newPassword" name="newPassword" placeholder="New Password" autocomplete="new-password" required>
                    <label for="newPassword">New Password</label>
                </div>

                <div class="form-floating mb-4">
                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" autocomplete="new-password" required>
                    <label for="confirmPassword">Confirm Password</label>
                </div>

                <button type="submit" class="btn btn-primary btn-change">
                    Update Password
                </button>
            </form>

            <div class="password-info">
                <h6>Password Requirements:</h6>
                <ul class="mb-0">
                    <li>Minimum 6 characters</li>
                    <li>Use a strong, unique password</li>
                    <li>Keep your password secure</li>
                </ul>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>