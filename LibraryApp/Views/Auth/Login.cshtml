@{
    ViewData["Title"] = "Sign In";
    var universitySettings = (LibraryApp.Models.UniversitySettings)ViewBag.UniversitySettings;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @universitySettings.ApplicationTitle</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="@universitySettings.FaviconPath">
    <style>
        :root {
            --primary-color: #0066cc;
            --secondary-color: #f8f9fa;
            --text-color: #333;
            --bg-color: #ffffff;
        }
        
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background: linear-gradient(135deg, var(--primary-color) 0%, #0056b3 100%);
            min-height: 100vh;
            font-weight: 400;
            line-height: 1.6;
            letter-spacing: -0.01em;
        }
        
        .login-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
        }
        
        .login-card {
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(20px);
            border-radius: var(--radius-xl);
            box-shadow: var(--shadow-2xl);
            padding: 3rem;
            width: 100%;
            max-width: 450px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: var(--transition-slow);
        }
        
        .login-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
        }
        
        .university-logo {
            max-height: 80px;
            max-width: 200px;
            margin-bottom: 1.5rem;
            object-fit: contain;
        }
        
        .login-header {
            text-align: center;
            margin-bottom: 2rem;
        }
        
        .login-header h1 {
            font-family: 'Poppins', sans-serif;
            color: var(--primary-color);
            font-weight: 700;
            margin-bottom: 0.5rem;
            font-size: 1.8rem;
            letter-spacing: -0.02em;
        }
        
        .login-header p {
            font-family: 'Inter', sans-serif;
            color: var(--gray-600);
            margin-bottom: 0;
            font-weight: 500;
            font-size: 1rem;
        }
        
        .form-floating > label {
            font-family: 'Inter', sans-serif;
            color: var(--gray-600);
            font-weight: 600;
            font-size: 0.9rem;
        }
        
        .form-control {
            font-family: 'Inter', sans-serif;
            border-radius: var(--radius);
            border: 2px solid var(--gray-300);
            padding: 0.75rem 1rem;
            transition: var(--transition);
            font-size: 0.95rem;
            font-weight: 500;
            box-shadow: var(--shadow-sm);
        }
        
        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(var(--primary-color-rgb), 0.15), var(--shadow);
        }
        
        .form-control::placeholder {
            color: var(--gray-400);
            font-style: italic;
        }
        
        .btn-login {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, var(--primary-color) 0%, #0056b3 100%);
            border: none;
            border-radius: var(--radius);
            padding: 0.875rem 2rem;
            font-weight: 700;
            font-size: 0.95rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            transition: var(--transition);
            width: 100%;
            box-shadow: var(--shadow);
            position: relative;
            overflow: hidden;
        }
        
        .btn-login::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }
        
        .btn-login:hover::before {
            left: 100%;
        }
        
        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-xl);
        }
        
        .btn-login:active {
            transform: translateY(0);
        }
        
        .alert {
            font-family: 'Inter', sans-serif;
            border-radius: var(--radius-lg);
            border: none;
            margin-bottom: 1.5rem;
            font-weight: 500;
            border-left: 4px solid;
        }
        
        .alert-danger {
            background: linear-gradient(135deg, rgba(220, 38, 38, 0.1) 0%, rgba(220, 38, 38, 0.05) 100%);
            color: #991b1b;
            border-left-color: #dc2626;
        }
        
        .login-info {
            background: linear-gradient(135deg, rgba(var(--primary-color-rgb), 0.1) 0%, rgba(var(--primary-color-rgb), 0.05) 100%);
            border-radius: var(--radius-lg);
            padding: 1.5rem;
            margin-top: 2rem;
            border: 1px solid rgba(var(--primary-color-rgb), 0.1);
            backdrop-filter: blur(10px);
        }
        
        .login-info h6 {
            font-family: 'Poppins', sans-serif;
            color: var(--primary-color);
            font-weight: 700;
            margin-bottom: 1rem;
            font-size: 1rem;
        }
        
        .login-info p {
            font-family: 'Inter', sans-serif;
            color: var(--gray-700);
            margin-bottom: 0.5rem;
            font-size: 0.875rem;
            font-weight: 500;
            line-height: 1.5;
        }
        
        .login-info p:last-child {
            margin-bottom: 0;
        }
        
        .login-info strong {
            font-weight: 700;
            color: var(--gray-800);
        }
        
        /* Mobile responsiveness */
        @@media (max-width: 576px) {
            .login-card {
                padding: 2rem 1.5rem;
                margin: 1rem;
            }
            
            .login-header h1 {
                font-size: 1.5rem;
            }
            
            .login-header p {
                font-size: 0.9rem;
            }
            
            .university-logo {
                max-height: 60px;
            }
            
            .login-info {
                padding: 1rem;
            }
            
            .login-info p {
                font-size: 0.8rem;
            }
        }
        
        /* Loading state */
        .btn-login.loading {
            pointer-events: none;
            opacity: 0.7;
        }
        
        .btn-login.loading::after {
            content: "";
            position: absolute;
            width: 16px;
            height: 16px;
            margin: auto;
            border: 2px solid transparent;
            border-top-color: white;
            border-radius: 50%;
            animation: button-loading-spinner 1s ease infinite;
        }
        
        @@keyframes button-loading-spinner {
            from {
                transform: rotate(0turn);
            }
            to {
                transform: rotate(1turn);
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <img src="@universitySettings.LogoPath" alt="@universitySettings.Name Logo" class="university-logo" 
                     onerror="this.src='/images/defaults/logo.svg'" />
                <h1>@universitySettings.Name</h1>
                <p>@universitySettings.ApplicationTitle</p>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @ViewBag.Error
                </div>
            }

            <form method="post" id="loginForm">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="userId" name="userId" placeholder="Enter your ID" required>
                    <label for="userId">Student ID / Professor ID / Username</label>
                </div>

                <div class="form-floating mb-4">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                    <label for="password">Password</label>
                </div>

                <button type="submit" class="btn btn-primary btn-login" id="loginButton">
                    <span id="loginText">Sign In</span>
                </button>
            </form>

            <div class="login-info">
                <h6><i class="fas fa-info-circle me-2"></i>Login Information</h6>
                <p><strong>Students & Professors:</strong> Use your ID number and password</p>
                <p><strong>First-time login:</strong> Password is first 2 letters of your name + last 4 digits of your ID</p>
                <p><strong>Admin:</strong> Contact system administrator for credentials</p>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('loginForm').addEventListener('submit', function() {
            const button = document.getElementById('loginButton');
            const text = document.getElementById('loginText');
            
            button.classList.add('loading');
            text.textContent = 'Signing In...';
            
            // Prevent double submission
            button.disabled = true;
        });
        
        // Reset button state if there's an error
        window.addEventListener('load', function() {
            const button = document.getElementById('loginButton');
            const text = document.getElementById('loginText');
            
            button.classList.remove('loading');
            text.textContent = 'Sign In';
            button.disabled = false;
        });
    </script>
</body>
</html>