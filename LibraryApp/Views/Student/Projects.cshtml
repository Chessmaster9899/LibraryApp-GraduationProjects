@model IEnumerable<LibraryApp.Models.Project>
@{
    ViewData["Title"] = "My Projects";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-white fw-bold">My Projects</h1>
    <a href="@Url.Action("Index")" class="btn btn-outline-light">
        <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
    </a>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var project in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span class="badge bg-@(project.Status switch {
                            ProjectStatus.Completed => "success",
                            ProjectStatus.Defended => "success",
                            ProjectStatus.InProgress => "warning",
                            ProjectStatus.Approved => "info",
                            _ => "secondary"
                        })">
                            @project.Status
                        </span>
                        <small class="text-muted">@project.SubmissionDate.ToString("MMM dd, yyyy")</small>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@project.Title</h5>
                        
                        @if (!string.IsNullOrEmpty(project.Abstract))
                        {
                            <p class="card-text">
                                @(project.Abstract.Length > 150 ? project.Abstract.Substring(0, 150) + "..." : project.Abstract)
                            </p>
                        }
                        
                        @if (!string.IsNullOrEmpty(project.Keywords))
                        {
                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="fas fa-tags me-1"></i>
                                    @project.Keywords
                                </small>
                            </div>
                        }
                        
                        <hr>
                        
                        <div class="row text-center">
                            <div class="col-6">
                                <small class="text-muted d-block">Supervisor</small>
                                <strong>@project.Supervisor.DisplayName</strong>
                                <br>
                                <small class="text-muted">@project.Supervisor.Department.Name</small>
                            </div>
                            @if (project.Evaluator != null)
                            {
                                <div class="col-6">
                                    <small class="text-muted d-block">Evaluator</small>
                                    <strong>@project.Evaluator.DisplayName</strong>
                                    <br>
                                    <small class="text-muted">@project.Evaluator.Department.Name</small>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Details", "Projects", new { id = project.Id })" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye me-1"></i>View Details
                            </a>
                            @if (!string.IsNullOrEmpty(project.DocumentPath))
                            {
                                <a href="@project.DocumentPath" target="_blank" class="btn btn-outline-success btn-sm">
                                    <i class="fas fa-file-pdf me-1"></i>Document
                                </a>
                            }
                            @if (!string.IsNullOrEmpty(project.PosterPath))
                            {
                                <a href="@project.PosterPath" target="_blank" class="btn btn-outline-info btn-sm">
                                    <i class="fas fa-image me-1"></i>Poster
                                </a>
                            }
                            <a href="@Url.Action("EditProject", new { id = project.Id })" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit me-1"></i>Edit
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">No Projects Found</h4>
            <p class="text-muted">You don't have any projects yet. Contact your supervisor to get started with your graduation project!</p>
            <a href="@Url.Action("Index")" class="btn btn-primary">
                <i class="fas fa-tachometer-alt me-1"></i>Back to Dashboard
            </a>
        </div>
    </div>
}

<!-- Projects Statistics -->
<div class="row mt-4">
    <div class="col-md-3">
        <div class="card border-primary">
            <div class="card-body text-center">
                <h4 class="text-primary">@Model.Count()</h4>
                <small class="text-muted">Total Projects</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-success">
            <div class="card-body text-center">
                <h4 class="text-success">@Model.Count(p => p.Status == ProjectStatus.Completed || p.Status == ProjectStatus.Defended)</h4>
                <small class="text-muted">Completed</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-warning">
            <div class="card-body text-center">
                <h4 class="text-warning">@Model.Count(p => p.Status == ProjectStatus.InProgress)</h4>
                <small class="text-muted">In Progress</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-info">
            <div class="card-body text-center">
                <h4 class="text-info">@Model.Count(p => p.Status == ProjectStatus.Approved)</h4>
                <small class="text-muted">Approved</small>
            </div>
        </div>
    </div>
</div>