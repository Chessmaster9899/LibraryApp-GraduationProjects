@model LibraryApp.Controllers.StudentDashboardViewModel
@{
    ViewData["Title"] = "Student Dashboard";
}

<div class="row">
    <div class="col-md-8">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Student Dashboard</h1>
            <div>
                <span class="text-muted">Welcome back, </span>
                <strong>@Model.Student.FullName</strong>
            </div>
        </div>
        
        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card border-primary">
                    <div class="card-body text-center">
                        <h4 class="text-primary">@Model.TotalProjects</h4>
                        <p class="card-text">Total Projects</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-success">
                    <div class="card-body text-center">
                        <h4 class="text-success">@Model.CompletedProjects</h4>
                        <p class="card-text">Completed</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-warning">
                    <div class="card-body text-center">
                        <h4 class="text-warning">@Model.InProgressProjects</h4>
                        <p class="card-text">In Progress</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Projects -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Recent Projects</h5>
                <a href="@Url.Action("Projects")" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body">
                @if (Model.RecentProjects.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Supervisor</th>
                                    <th>Status</th>
                                    <th>Submission Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var project in Model.RecentProjects)
                                {
                                    <tr>
                                        <td>
                                            <strong>@project.Title</strong>
                                            @if (!string.IsNullOrEmpty(project.Keywords))
                                            {
                                                <br>
                                                <small class="text-muted">@project.Keywords</small>
                                            }
                                        </td>
                                        <td>@project.Supervisor.DisplayName</td>
                                        <td>
                                            <span class="badge bg-@(project.Status switch {
                                                ProjectStatus.Completed => "success",
                                                ProjectStatus.Defended => "success",
                                                ProjectStatus.InProgress => "warning",
                                                ProjectStatus.Approved => "info",
                                                _ => "secondary"
                                            })">
                                                @project.Status
                                            </span>
                                        </td>
                                        <td>@project.SubmissionDate.ToString("MMM dd, yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-4">No projects found. Contact your advisor to get started!</p>
                }
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Student Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-5">Student ID:</dt>
                    <dd class="col-7">@Model.Student.StudentNumber</dd>
                    
                    <dt class="col-5">Name:</dt>
                    <dd class="col-7">@Model.Student.FullName</dd>
                    
                    <dt class="col-5">Email:</dt>
                    <dd class="col-7">@Model.Student.Email</dd>
                    
                    <dt class="col-5">Department:</dt>
                    <dd class="col-7">@Model.Student.Department.Name</dd>
                    
                    <dt class="col-5">Enrolled:</dt>
                    <dd class="col-7">@Model.Student.EnrollmentDate.ToString("MMM yyyy")</dd>
                    
                    @if (Model.Student.LastLogin.HasValue)
                    {
                        <dt class="col-5">Last Login:</dt>
                        <dd class="col-7">@Model.Student.LastLogin.Value.ToString("MMM dd, yyyy")</dd>
                    }
                </dl>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="@Url.Action("Projects")" class="btn btn-primary">View All Projects</a>
                    <a href="@Url.Action("Profile")" class="btn btn-outline-secondary">Edit Profile</a>
                    <a href="@Url.Action("ChangePassword", "Auth")" class="btn btn-outline-warning">Change Password</a>
                    <hr>
                    <a href="@Url.Action("Logout", "Auth")" class="btn btn-danger">Sign Out</a>
                </div>
            </div>
        </div>
    </div>
</div>