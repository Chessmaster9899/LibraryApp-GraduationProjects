@model Student

@{
    ViewData["Title"] = "Delete Student";
}

<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="text-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>Delete Student
            </h2>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="alert alert-danger border-0 shadow-sm" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                <div>
                    <h5 class="alert-heading mb-1">Are you sure you want to delete this student?</h5>
                    <p class="mb-0">This action cannot be undone. All associated data will be permanently removed.</p>
                </div>
            </div>
        </div>
        
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">
                    <i class="fas fa-user-graduate me-2"></i>Student Information
                </h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.StudentNumber)</dt>
                    <dd class="col-sm-9">
                        <strong>@Html.DisplayFor(model => model.StudentNumber)</strong>
                    </dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FirstName)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.FirstName)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.LastName)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.LastName)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model?.Email))
                        {
                            <i class="fas fa-envelope me-1"></i>@Html.DisplayFor(model => model.Email)
                        }
                        else
                        {
                            <span class="text-muted">No email provided</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Phone)</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model?.Phone))
                        {
                            <i class="fas fa-phone me-1"></i>@Html.DisplayFor(model => model.Phone)
                        }
                        else
                        {
                            <span class="text-muted">No phone provided</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Department)</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-info">
                            <i class="fas fa-building me-1"></i>@Html.DisplayFor(model => model.Department.Name)
                        </span>
                    </dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EnrollmentDate)</dt>
                    <dd class="col-sm-9">
                        <i class="fas fa-calendar me-1"></i>@Html.DisplayFor(model => model.EnrollmentDate)
                    </dd>
                </dl>
            </div>
        </div>
        
        @if (Model?.ProjectStudents?.Any() == true)
        {
            <div class="card mt-3">
                <div class="card-header bg-warning text-dark">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Associated Projects
                    </h6>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-2">
                        This student has @Model.ProjectStudents.Count associated project(s). Deleting this student will also remove these associations:
                    </p>
                    <ul class="list-group list-group-flush">
                        @foreach (var projectStudent in Model.ProjectStudents)
                        {
                            <li class="list-group-item px-0">
                                <i class="fas fa-project-diagram me-2 text-primary"></i>
                                <strong>@projectStudent.Project.Title</strong>
                                <small class="text-muted ms-2">(@projectStudent.Project.Status)</small>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        }
        
        <div class="card mt-3 border-danger">
            <div class="card-body">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-danger mb-1">Confirm Deletion</h6>
                            <small class="text-muted">Type "DELETE" to confirm this action</small>
                        </div>
                        <div class="ms-3">
                            <button type="submit" class="btn btn-danger me-2" onclick="return confirmDelete()">
                                <i class="fas fa-trash me-1"></i>Delete Student
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>Cancel
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card border-warning">
            <div class="card-header bg-warning text-dark">
                <h6 class="card-title mb-0">
                    <i class="fas fa-info-circle me-1"></i>Important Information
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <h6 class="text-warning">
                        <i class="fas fa-exclamation-triangle me-1"></i>Data Impact
                    </h6>
                    <ul class="list-unstyled mb-0 small">
                        <li><i class="fas fa-check text-danger me-1"></i>Student record will be permanently deleted</li>
                        <li><i class="fas fa-check text-danger me-1"></i>Project associations will be removed</li>
                        <li><i class="fas fa-check text-danger me-1"></i>Login access will be revoked</li>
                        <li><i class="fas fa-check text-danger me-1"></i>All personal data will be erased</li>
                    </ul>
                </div>
                
                <hr>
                
                <div>
                    <h6 class="text-info">
                        <i class="fas fa-lightbulb me-1"></i>Alternative Actions
                    </h6>
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-warning btn-sm">
                            <i class="fas fa-edit me-1"></i>Edit Instead
                        </a>
                        <a asp-action="Details" asp-route-id="@Model?.Id" class="btn btn-outline-info btn-sm">
                            <i class="fas fa-eye me-1"></i>View Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function confirmDelete() {
    return confirm('Are you absolutely sure you want to delete this student? This action cannot be undone.');
}
</script>